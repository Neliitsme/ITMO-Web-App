extends ../../layouts/main
append page-title 
    title Login

append styles
    link(rel="stylesheet", href="profile.css")

append scripts
    
append content
    <main>
        if loginInfo['logged'] == 'true'
            <button onclick="userLogOut()" class="topnav__navbox_login">Log out</button>
            <p>You are logged in as #{loginInfo['username']}</p>
        else
            form(method="POST")
                p Username
                <input type="text" class="topnav__navbox_input username">
                p Email
                <input type="email" class="topnav__navbox_input">
                p Password
                <input type="password" class="topnav__navbox_input password">
                p
                <button type="submit" onclick="userLogIn()" class="topnav__navbox_login">Log in</button>
                <p>You are not logged in</p>

    </main>